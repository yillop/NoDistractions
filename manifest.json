{
  "manifest_version": 3,
  "name": "NoDistractions",
  "version": "1.0",
  "description": "A Chrome extension to block sites or words from appearing in search results and block site links from being accessed",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["declarativeNetRequest", "storage"],
  "host_permissions": ["*://*.google.com/search*"],
  "web_accessible_resources": [
    {
      "resources": ["block.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "Icons/icon16.png",
    "32": "Icons/icon32.png",
    "48": "Icons/icon48.png",
    "128": "Icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.google.com/search*"],
      "js": ["Content/blocker.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://*.google.com/search*"],
      "js": ["Content/main.js"],
      "run_at": "document_idle"
    }
  ]
}
